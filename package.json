{
  "name": "bookeditor-starter",
  "version": "0.1.0",
  "description": "Node.js + TypeScript starter project (Express, ESLint, Prettier, Jest, Docker)",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "lint": "eslint 'src/**/*.{ts,js}'",
    "format": "prettier --write 'src/**/*.{ts,js,json,md}'",
    "test": "jest --passWithNoTests",
    "docker:build": "docker build -t bookeditor-starter ."
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.3.0",
    "eslint-plugin-prettier": "^5.1.4",
    "jest": "^29.6.1",
    "prettier": "^3.4.0",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.2"
  }
}